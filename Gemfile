source "https://rubygems.org"

# Lock Jekyll to a stable version to ensure compatibility
gem "jekyll", "4.2.2"

# Explicitly use the standard and reliable Sass converter
gem "jekyll-sass-converter", "~> 2.1"

# Essential plugins for the theme to function
group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-sitemap"
  gem "jekyll-seo-tag"
  gem "jekyll-paginate-v2"
  gem "jekyll-archives"
  gem "jekyll-toc"
  gem "jekyll-email-protect"
 

# from Aestial/aestial.github.io
  gem 'jekyll-get-json'
  gem 'jekyll-imagemagick'
  gem 'jekyll-link-attributes'
  gem 'jekyll-minifier'
  gem 'jekyll-regex-replace'
  gem 'jekyll-scholar'
  gem 'jekyll-tabs'
  gem 'jekyll-terser', :git => "https://github.com/RobertoJBeltran/jekyll-terser.git"
  gem 'jekyll-twitter-plugin'
  gem 'jemoji'
  gem 'classifier-reborn' 


end

# Required for the GitHub Actions environment
gem "webrick"
gem "feedjira"
gem "httparty"
